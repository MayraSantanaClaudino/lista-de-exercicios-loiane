import java.util.*;

public class Main
{
	public static void main(String[] args) {
	    
		Scanner scan = new Scanner(System.in);
		
		System.out.println("Loja de tintas");
		System.out.println("Informe o tamanho da área a ser pintada em metros quadrados");
		double tamanho = scan.nextDouble();
		
		double cobertura = (tamanho / 6);
		double tinta2 = (cobertura / 3.6);
		double preco2 = tinta2 * 25;
		
		System.out.printf("A quantidade de latas de tinta a ser usada é %.2f\n", tinta2);
		System.out.printf("O valor total é %.2f", preco2);
		
	}
}
