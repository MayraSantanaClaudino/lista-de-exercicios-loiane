//Loja de tintas
//Mayra Santana, 2023

import java.util.*;

public class Main
{
	public static void main(String[] args) {
	    
		Scanner scan = new Scanner(System.in);
		
		System.out.println("Loja de tintas");
		System.out.println("Informe o tamanho da área a ser pintada em metros quadrados");
		double tamanho = scan.nextDouble();
		
		double cobertura = (tamanho / 3);
		double tinta = (cobertura / 18);
		double preco = tinta * 80;
		
		System.out.printf("A quantidade de latas de tinta a ser usada é %.2f\n", tinta);
		System.out.printf("O valor total é %.2f", preco);
		
	}
}
